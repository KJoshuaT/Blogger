@model IEnumerable<Blogger.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<h1>Blogger</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-4">Create New</a>
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-action="Details" asp-route-id="@item.Id" class="blog-post border-0 p-0 clickable-blog">
                
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Blog Image" class="img-fluid mb-3 landscape-image" />
                    }
                    <p class="text-muted">@item.PublishedDate.ToString("MM.dd.yyyy")</p>
                    <h2>@item.Title</h2>
                    <p>@item.Content</p>
                </a>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .blog-post {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
        }
        .landscape-image {
            width: 100%;
            height: auto;
            object-fit: cover;
            aspect-ratio: 4 / 3; 
        }
        .blog-post h2 {
            font-size: 1.5rem;
            text-align: center;
        }
        .blog-post p {
            font-size: 1rem;
        }
        
        .blog-post:hover {
            background-color: #f9f9f9;
        }
        
        .clickable-blog {
            text-decoration: none; /* Remove underline */
            color: inherit; /* Keep the text color as is */
        }

        .clickable-blog:hover {
            color: inherit; /* Prevent changing color on hover */
            cursor: pointer; /* Show a pointer to indicate it's clickable */
        }

        .blog-title, .blog-date, .blog-content {
            margin: 0; /* Adjust as needed */
            text-align: center; /* Center the text */
        }
    </style>
}