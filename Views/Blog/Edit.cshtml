@model ChitTalk.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
            <div class="form-group mb-4">
                    <div class="mb-2">
                    <img src="@Model.ImagePath" alt="Uploaded Image" class="img-fluid" style="max-height: 200px; width: 100%; object-fit: cover;" />
                </div>
            </div>
            }


            <div class="form-group mb-4">
                <input asp-for="Title" placeholder="Your Title!" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <textarea asp-for="Content" placeholder="What's up?" class="form-control" rows="10" cols="50"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <i class="fa-solid fa-image fa-2xl"></i>
                <input asp-for="ImagePath" type="file" name="ImagePath" class="custom-file-input" id="customFile" accept="image/*" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>

                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
